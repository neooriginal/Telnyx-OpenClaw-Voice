# Telnyx API Keys
TELNYX_API_KEY=your_telnyx_api_key
TELNYX_PUBLIC_KEY=your_telnyx_public_key
TELNYX_PHONE_NUMBER=your_telnyx_phone_number

# OpenAI API (for STT and TTS)
OPENAI_API_KEY=your_openai_api_key

# OpenClaw Backend (for LLM)
OPENCLAW_API_KEY=your_openclaw_api_key
OPENCLAW_BASE_URL=http://localhost:18789/v1

# Deployment & Tunneling
BASE_URL=your_public_url_or_ngrok_url
PORT=3023

# Optional: Programmatic ngrok tunneling
# If NGROK_AUTHTOKEN is set, the app will start its own tunnel on startup.
# NGROK_AUTHTOKEN=your_ngrok_authtoken
# NGROK_DOMAIN=your_custom_ngrok_domain.ngrok-free.app

# Name for greeting
NAME=neo

# Outgoing calls
TELNYX_CONNECTION_ID=YOUR_CONNECTION_ID_HERE
DEFAULT_TO_NUMBER=+1234567890

# Comma-separated whitelist of numbers allowed to call in AND be called out to (leave empty to allow all)
# ALLOWED_NUMBERS=+1234567890,+0987654321

# Inbound PIN auth for non-whitelisted callers
# Non-whitelisted callers must silently enter this 4-digit PIN; call hangs up if wrong or timed out.
INBOUND_PIN=1234
PIN_TIMEOUT_SECS=10
PIN_COOLDOWN_SECS=600